<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:focusableInTouchMode="true"
                tools:context=".MainActivity">

    <RelativeLayout
            android:id="@+id/ll_titlebar"
            android:layout_width="match_parent"
            android:background="#eaeaea"
            android:layout_height="48dp">

        <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/backarrow"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="投票"
                android:textColor="#996666"
                android:textSize="@dimen/textSize20"
                android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_titlebar"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="23dp">

        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/one_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宠物 ： 布丁"
                    android:textColor="#996666"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="12dp"
                    android:text="编号 ： 358"
                    android:textColor="#996666"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/number"
                    android:layout_marginLeft="155dp"
                    android:text="当前票数 :"
                    android:textColor="#996666"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/number"
                    android:layout_marginLeft="245dp"
                    android:text="99"
                    android:textColor="#996666"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/two_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/one_ll"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

            <WebView
                    android:id="@+id/cloth_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </WebView>
        </RelativeLayout>

        <Button
                android:layout_below="@id/two_ll"
                android:id="@+id/btn_login_cloth_grey"
                android:layout_width="343dp"
                android:layout_height="55dp"
                android:layout_marginTop="2dp"
                android:layout_centerInParent="true"
                android:background="@drawable/greybtn"
                android:text="给它投票"
                android:textColor="#ffffff"
                android:textSize="24sp"/>
    </RelativeLayout>

</RelativeLayout>